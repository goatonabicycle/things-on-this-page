{
  "name": "Things On This Page",
  "description": "",
  "version": "0.1",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "http://localhost/*",
        "file:///*/*"
      ],
      "js": [
        "content/things-popup.js",
        "content/time-counter.js",
        "content/page.js",
        "content/mouse.js",
        "content/words.js",
        "content.js"
      ],
      "type": "module",
      "run_at": "document_idle"
    }
  ],
  "permissions": ["webRequest", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "/src/background.js"
  }
}
